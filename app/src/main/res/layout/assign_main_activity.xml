<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_pop"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvOrderNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorBackground"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:text="订单号"
                    android:textColor="@color/colorTitle"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvStyleNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@color/colorBackground"
                    android:gravity="center"
                    android:text="款号"
                    android:textColor="@color/colorTitle"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_BatchNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:background="@color/colorBackground"
                    android:gravity="center"
                    android:text="批次号"
                    android:textColor="@color/colorTitle"
                    android:textSize="13sp"/>

            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_gravity="left|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <TextView
                    android:padding="5dp"
                    android:background="#EF5B69"
                    android:id="@+id/btnShrink"
                    android:gravity="center"
                    android:text="收缩"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </FrameLayout>
        <include layout="@layout/underline_black"/>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:id="@+id/shrinkLayout"
               android:background="@color/colorBackground"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:gravity="center_vertical"
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:gravity="center_horizontal"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:gravity="center"
                               android:text="订单交期"
                               android:textColor="@color/colorTitle"
                               android:textSize="12sp"/>

                           <android.support.v7.widget.CardView
                               android:id="@+id/cvDeliveryDate"
                               app:cardCornerRadius="5dp"
                               android:visibility="invisible"
                               app:cardElevation="3dp"
                               android:padding="5dp"
                               android:layout_marginLeft="40dp"
                               android:layout_marginRight="40dp"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <TextView
                                   android:id="@+id/tvDeliveryDate"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="#EF5B69"
                                   android:gravity="center"
                                   android:paddingBottom="2dp"
                                   android:padding="5dp"
                                   android:paddingTop="2dp"
                                   android:textColor="@color/white"
                                   android:textSize="12sp"/>
                           </android.support.v7.widget.CardView>
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center_horizontal"
                           android:orientation="vertical">
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="5dp"
                               android:layout_weight="1"
                               android:gravity="center"
                               android:text="订单数量"
                               android:textColor="@color/colorTitle"
                               android:textSize="12sp" />
                           <android.support.v7.widget.CardView
                               android:id="@+id/cvOrderQTY"
                               android:visibility="invisible"
                               app:cardCornerRadius="5dp"
                               app:cardElevation="3dp"
                               android:padding="5dp"
                               android:layout_marginLeft="40dp"
                               android:layout_marginRight="40dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/tvOrderQTY"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="#EF5B69"
                                   android:gravity="center"
                                   android:padding="5dp"
                                   android:paddingBottom="2dp"
                                   android:paddingTop="2dp"
                                   android:textColor="@color/white"
                                   android:textSize="12sp"/>
                           </android.support.v7.widget.CardView>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center_horizontal"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:id="@+id/textView"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="5dp"
                               android:gravity="center"
                               android:text="累计裁剪数量"
                               android:textColor="@color/colorTitle"
                               android:textSize="12sp"/>

                           <android.support.v7.widget.CardView
                               android:id="@+id/cvCutQTY"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:padding="5dp"
                               android:layout_marginLeft="40dp"
                               android:layout_marginRight="40dp"
                               android:visibility="invisible"
                               app:cardCornerRadius="5dp"
                               app:cardElevation="3dp">

                               <TextView
                                   android:id="@+id/tvCutQTY"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="#EF5B69"
                                   android:gravity="center"
                                   android:paddingBottom="2dp"
                                   android:padding="5dp"
                                   android:paddingTop="2dp"
                                   android:textColor="@color/white"
                                   android:textSize="12sp"/>
                           </android.support.v7.widget.CardView>

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center_horizontal"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="已上线数量"
                               android:textColor="@color/colorTitle"
                               android:textSize="12sp"/>
                           <android.support.v7.widget.CardView
                               android:id="@+id/cvUpQTY"
                               app:cardCornerRadius="5dp"
                               android:visibility="invisible"
                               app:cardElevation="3dp"
                               android:padding="5dp"
                               android:layout_marginLeft="40dp"
                               android:layout_marginRight="40dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/tvUpQTY"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="#EF5B69"
                                   android:gravity="center"
                                   android:paddingBottom="2dp"
                                   android:padding="5dp"
                                   android:paddingTop="2dp"
                                   android:textColor="@color/white"
                                   android:textSize="12sp" />
                           </android.support.v7.widget.CardView>

                       </LinearLayout>
                       <LinearLayout
                           android:id="@+id/ll_order"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center_horizontal"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="已下线数量"
                               android:textColor="@color/colorTitle"
                               android:textSize="12sp"/>

                           <android.support.v7.widget.CardView
                               android:id="@+id/cvDownQTY"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:padding="5dp"
                               android:layout_marginLeft="40dp"
                               android:layout_marginRight="40dp"
                               android:visibility="invisible"
                               app:cardCornerRadius="5dp"
                               app:cardElevation="3dp">

                               <TextView
                                   android:id="@+id/tvDownQTY"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="#EF5B69"
                                   android:gravity="center"
                                   android:paddingBottom="2dp"
                                   android:padding="5dp"
                                   android:paddingTop="2dp"
                                   android:textColor="@color/white"
                                   android:textSize="12sp"/>
                           </android.support.v7.widget.CardView>

                       </LinearLayout>
                   </LinearLayout>
                   <ImageView
                       android:layout_margin="5dp"
                       android:scaleType="fitXY"
                       android:src="@drawable/icon_default"
                       android:id="@+id/ivPicture"
                       android:layout_width="40dp"
                       android:layout_height="40dp"/>
               </LinearLayout>
               <TextView
                   android:padding="2dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:gravity="center"
                   android:text="工序平衡图"
                   android:textColor="@color/blue"
                   android:textSize="13sp"/>
               <include layout="@layout/underline_black"/>
               <com.github.mikephil.charting.charts.BarChart
                   android:layout_marginBottom="2dp"
                   android:id="@+id/barChart"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"/>
               <include layout="@layout/underline_black"/>
           </LinearLayout>
       </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvProcedureTitle"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="工序指派"
        android:textColor="@color/blue"
        android:textSize="13sp"/>
    <include layout="@layout/underline_black"/>
    <LinearLayout
        android:id="@+id/hdvgMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvWorkTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#424B84"
                android:gravity="center"
                android:padding="10dp"
                android:text="工序组"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp"/>

            <ListView
                android:id="@+id/lv_work"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/classGroupTitleLayout"
                android:background="#11285A"
                android:orientation="horizontal"
                android:focusable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:text="班组:"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:gravity="center"
                    android:id="@+id/spGroupName"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:background="#424B84"
                    android:id="@+id/etName"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvSearch"
                    android:text="查找"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="12sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <GridView
                android:id="@+id/gv_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@color/cardview_light_background"
                android:numColumns="2"
                android:stretchMode="columnWidth"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</layout>
