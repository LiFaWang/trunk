<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:orientation="horizontal">

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/ll_work_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_progress_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="012"
            android:textColor="@color/colorTitle"
            android:textSize="14sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#818793"/>

        <TextView
            android:id="@+id/tv_progress_level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="一级"
            android:textColor="@color/colorTitle"
            android:textSize="14sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#818793"/>

        <TextView
            android:id="@+id/tv_progress_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp"
            android:text="123"
            android:textColor="@color/colorTitle"
            android:textSize="14sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#818793"/>

        <LinearLayout
            android:id="@+id/ll_worker_name_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.25dp"
            android:layout_weight="1"
            android:orientation="vertical"/>
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/black"/>

</LinearLayout>